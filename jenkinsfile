pipeline {
    agent any

  

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Test') {
            steps {
                sh 'sudo npm install'
                sh 'npm test'
            }
        }


        stage('Build') {
            steps {
                // Deploy the application (optional - you can customize this)
                script {
                   
                    sh 'npm run build'
                }
            }
        }
    }

}

